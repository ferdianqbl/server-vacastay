<script>
  $(document).ready(function () {
    $('#dataTableActivity').DataTable();

    $("#dataTable").on("click", ".btn-update", function () {
      let id = $(this).data("id");
      $(".dataId").val(id);

      let nameFeature = $(this).data("namefeature");
      let QTY = $(this).data("qty");
      $(".dataNameFeature").val(nameFeature);
      $(".dataQTY").val(QTY);
    })

    $("#dataTableActivity").on('click', '.btn-update', function () {
      let id = $(this).data("id");
      $(".dataId").val(id);

      let nameActivity = $(this).data("nameactivity");
      let type = $(this).data("type");
      $(".dataNameActivity").val(nameActivity);
      $(".dataType").val(type);
    })
  })
  CKEDITOR.replace('description');
</script>